node {
    // Define the Docker agent
    docker.image('node:16-buster-slim').withRun('-p 3000:3000').inside {
        
        stage('Build') {
            // Execute npm install
            sh 'npm install'
        }

        stage('Test') {
            // Grant executable permissions recursively
            sh "chmod +x -R ${env.WORKSPACE}"
            // Execute test.sh script
            sh './jenkins/scripts/test.sh'
        }
    }
}